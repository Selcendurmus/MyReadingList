@model MyReadingList.ViewModels.BookFormViewModel
@{
    ViewBag.Title = Model.Heading;
}
<h2>@Model.Heading</h2>


@using (Html.BeginForm(Model.Action, "Books"))
{
    //<p class="alert alert-info">All fields are <strong>required</strong></p>

    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">

        @Html.LabelFor(m => m.Name)

        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Pages)

        @Html.TextBoxFor(m => m.Pages, new { @class = "form-control" })

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Reader)

        @Html.DropDownListFor(m => m.Reader, new SelectList(Model.Readers, "Id", "Name"), "", new { @class = "form-control" })

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Level)

        @Html.DropDownListFor(m => m.Level, new SelectList(Model.Levels, "Id", "Name"), "", new { @class = "form-control" })

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Rating)

        @Html.DropDownListFor(m => m.Rating, new SelectList(Model.Ratings, "Id", "Name"), "", new { @class = "form-control" })

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Date)

        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg 01/01/2019" })

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Comments)

        @Html.TextBoxFor(m => m.Comments, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.Comments)

    </div>

    <button type="submit" class="btn btn-primary btn-lg">Save</button> 

    <div>

        @Html.ActionLink("Back to List", "Index", "Home")


    </div>

}
